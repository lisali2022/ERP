@namespace BootstrapBlazor.Components
@inherits BootstrapComponentBase

@if (_showTooltip)
{
    <Tooltip Title="@Value">
        @RenderLabel
    </Tooltip>
}
else
{
    @RenderLabel
}

@code {
    Microsoft.AspNetCore.Components.RenderFragment RenderLabel =>
    @<label @attributes="AdditionalAttributes" class="@ClassString">@Value</label>;
}
